czcp() {
  local conf="${1:-nvim}"
  if [[ ! " hypr nvim tmux " =~ " $conf " ]]; then
    echo "Error: config file must be one of 'hypr', 'nvim', or 'tmux'."
    return 1
  fi

  rsync -av --exclude '.git' "$HOME/.config/${conf}/" "$HOME/temp/external_${conf}/"
  # rsync -av --exclude '.git' "$HOME/.config/${conf}/" "$HOME/.local/share/chezmoi/dot_config/external_${conf}/"
}

