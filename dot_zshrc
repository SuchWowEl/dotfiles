ty() {
  # List all snapshot names
  snapshots=$(sudo timeshift --list | awk '/^---/{found=1;next} found && NF{print $3}')
  # echo $snapshots
  snapshot_count=$(echo "$snapshots" | grep -c .)
  echo $snapshot_count
  if [ "$snapshot_count" -ge 2 ]; then
      oldest_snapshot=$(printf "%s\n" "${snapshots[@]}" | head -n 1)
      echo "Removing oldest snapshot: $oldest_snapshot"
      sudo timeshift --delete --snapshot "$oldest_snapshot"
  else
      echo "Not enough snapshots to remove. Current count: $snapshot_count"
  fi
  echo "Creating new snapshot..."
  sudo timeshift --create
  yay
}

sb() {
  echo "Executing conservation script..."
  #sudo nano /etc/tlp.conf
  file="/etc/tlp.conf"

  # Check if the file exists
  if [ ! -e "$file" ]; then
      echo "Error: File '$file' not found."
      exit 1
  else
      echo "filename: $file"
  fi

  current_value=$(grep -Po 'STOP_CHARGE_THRESH_BAT0=\K[^"]*' "$file")
  new_value="idk"


  if [ "$current_value" = "0" ]; then
      new_value="1"
  else
      new_value="0"
  fi

  echo "new value is $new_value"

  sudo sed -i "s/STOP_CHARGE_THRESH_BAT0=$current_value/STOP_CHARGE_THRESH_BAT0=$new_value/" "$file"

  sudo tlp start
  sudo tlp-stat -b
}

alias cb="sudo tlp-stat -b | grep -Eo 'conservation_mode.*'"
